import React, { useState } from "react";

import { NavContainer, NavTab } from "./TabNavigation.styles";

interface TabNavigationProps {
  options: {
    label: string;
    value: string;
  }[];
  defaultValue?: string;
}

const TabNavigation: React.FC<TabNavigationProps> = ({
  options,
  defaultValue = "",
}) => {
  const [active, setActive] = useState<string>(defaultValue);

  const optionValues = options.map((option) => option.value);

  const determineActive = (value: string) =>
    optionValues.includes(active) ? "active" : "";

  return (
    <NavContainer>
      {options.map(({ label, value }) => (
        <NavTab key={value} className={determineActive(value)}>
          {label}
        </NavTab>
      ))}
    </NavContainer>
  );
};

export default TabNavigation;
